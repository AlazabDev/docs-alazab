# === docs.alazab.com (Nuxt 4 Full-Stack) ===

# Where files are stored on disk
DOCS_STORAGE_ROOT=/var/docs

# SQLite metadata DB file
DOCS_DB_PATH=/var/docs/.meta/metadata.db

# Optional: API key. If set, write endpoints require it (header x-docs-api-key or cookie docs_api_key).
DOCS_API_KEY=CHANGE_ME_STRONG_KEY

# Optional: Allow anonymous read of documents list/download. Values: 0 or 1
DOCS_PUBLIC_READ=0

# Cookie security (1 recommended on HTTPS)
DOCS_COOKIE_SECURE=1

# Upload limits
DOCS_MAX_FILE_SIZE_MB=100
DOCS_MAX_FILES_PER_REQUEST=50

# Nuxt server port
PORT=4010
